{
  "name": "base",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "commit": "cz"
  },
  "dependencies": {
    "@vueuse/core": "^4.3.1",
    "@yangss/vue3-i18n": "^0.5.0",
    "nprogress": "^0.2.0",
    "vue": "^3.0.5",
    "vue-router": "^4.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@iconify/json": "^1.1.334",
    "@types/node": "^14.14.31",
    "@types/nprogress": "^0.2.0",
    "@vitejs/plugin-vue": "^1.2.2",
    "@vue/compiler-sfc": "^3.0.5",
    "@vuedx/typescript-plugin-vue": "^0.6.3",
    "@yangss/eslint-config-vue": "^0.1.2",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.21.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "typescript": "^4.1.3",
    "vite": "^2.2.3",
    "vite-plugin-components": "^0.8.4",
    "vite-plugin-icons": "^0.5.0",
    "vite-plugin-windicss": "^0.15.7",
    "vue-tsc": "^0.0.24",
    "windicss": "^2.5.14"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": "eslint --fix"
  }
}
