{
  "name": "@yangss/create-app",
  "version": "0.2.8",
  "description": "Scaffolding Vite & TS Projects with Some Pre-configured Features",
  "main": "./dist/index.js",
  "type": "module",
  "bin": {
    "create-app": "dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm",
    "lint": "eslint src/* --fix",
    "release": "pnpm build && bumpp --tag --push --no-verify && pnpm publish",
    "prepare": "husky install"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "vite",
    "vue",
    "template"
  ],
  "files": [
    "dist",
    "templates"
  ],
  "author": "Nicholas Yang <yss_2016@outlook.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/yangss3/create-app.git"
  },
  "homepage": "https://github.com/yangss3/create-app#readme",
  "license": "ISC",
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.21",
    "@yangss/eslint-config-vue": "^0.2.3",
    "@yangss/init-git-repo": "^0.0.13",
    "eslint": "^8.11.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "typescript": "^4.6.2",
    "tsup": "^5.12.1",
    "bumpp": "^7.1.1"
  },
  "dependencies": {
    "fs-extra": "^10.0.1",
    "inquirer": "^8.2.1",
    "minimist": "^1.2.5",
    "ora": "^6.1.0"
  },
  "lint-staged": {
    "*.(ts|vue)": "eslint --fix"
  }
}
